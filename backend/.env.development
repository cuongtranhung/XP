# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database - Use host.docker.internal for WSL2 to Windows connection
# This resolves to the Windows host IP automatically
DATABASE_HOST=host.docker.internal
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=@abcd1234
DB_HOST=host.docker.internal
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=@abcd1234

# JWT
JWT_SECRET=your-super-secure-256-bit-secret-key-change-in-production-12345678901234567890
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
RESET_TOKEN_EXPIRY=3600000
EMAIL_VERIFY_TOKEN_EXPIRY=86400000

# Email Configuration (Gmail example)
SMTP_HOST=mail.911.com.vn
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=username
SMTP_PASS=password
EMAIL_FROM=XP Admin <info@example.com>

# Performance Configuration - DISABLE CACHE TO PREVENT REDIS ERRORS
ENABLE_CACHE=false
CACHE_TTL=3600
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=debug
LOG_FORMAT=dev