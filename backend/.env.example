# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=your_database
DATABASE_USER=your_user
DATABASE_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database
DB_USER=your_user
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your-super-secure-256-bit-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
RESET_TOKEN_EXPIRY=3600000
EMAIL_VERIFY_TOKEN_EXPIRY=86400000

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@example.com
FROM_NAME=Your App Name

# Rate Limiting
LOGIN_RATE_LIMIT=50
REGISTER_RATE_LIMIT=30
FORGOT_PASSWORD_RATE_LIMIT=30
RESET_PASSWORD_RATE_LIMIT=50
GENERAL_RATE_LIMIT=1000

# Development
LOG_LEVEL=debug

# Dynamic Form Builder Module
# Redis Configuration (for caching and real-time features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Form Builder Features
FEATURE_COLLABORATION=true
FEATURE_FILE_UPLOAD=true
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=true
FEATURE_VERSIONING=true
FEATURE_EXPORT=true

# Form Builder Limits
DYNAMIC_FORMS_MAX_PER_USER=50
DYNAMIC_FORMS_MAX_FIELDS=100
DYNAMIC_FORMS_MAX_SUBMISSIONS=10000
DYNAMIC_FORMS_FILE_MAX_SIZE=10485760

# File Upload Configuration
UPLOAD_DIR=./uploads/forms
MAX_FILE_SIZE=10485760

# WebSocket Configuration
WS_PORT=5001

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Performance Configuration
ENABLE_CACHE=false
CACHE_TTL=3600
REDIS_ENABLED=false

# Monitoring
MONITORING_ENABLED=true
METRICS_ENDPOINT=/api/formbuilder/metrics

# Activity Logging Configuration
ACTIVITY_LOGGING_ENABLED=false
ACTIVITY_ASYNC_PROCESSING=false
ACTIVITY_BATCHING=false
ACTIVITY_BATCH_SIZE=50
ACTIVITY_BATCH_INTERVAL_MS=5000
ACTIVITY_MAX_PROCESSING_TIME_MS=100

# Activity Logging Scope (what to log)
ACTIVITY_LOG_AUTH=false
ACTIVITY_LOG_API=false
ACTIVITY_LOG_SECURITY=false
ACTIVITY_LOG_USER_ACTIONS=false

# Cloudflare Configuration (Optional - for Upload Module)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Cloudflare R2 Storage Configuration (Optional - for Upload Module)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://r2.cloudflare.com