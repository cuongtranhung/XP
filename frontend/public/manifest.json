  "share_target": {
    "action": "/form-builder/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["application/json", ".json"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+formbuilder",
      "url": "/form-builder?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  }
}