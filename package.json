{
  "name": "fullstack-auth-monorepo",
  "version": "1.0.0",
  "description": "Fullstack authentication system with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "./start-dev.sh",
    "stop": "./stop-dev.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && tsc --noEmit",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd e2e && npm test",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../e2e && npm install",
    "claude:context": "cat .claudecontext && echo '\n\n📁 Project Structure:' && ls -la",
    "claude:status": "./quick-start.sh",
    "claude:quick-start": "npm run claude:status && echo '\n🚀 Ready for Claude Code!'"
  },
  "workspaces": [
    "frontend",
    "backend",
    "e2e"
  ],
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "authentication",
    "fullstack",
    "react",
    "express",
    "typescript",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "playwright": "^1.54.2"
  }
}
